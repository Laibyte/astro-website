---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const recentBlogPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

const recentPosts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

const featuredProjects = (await getCollection('projects'))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<BaseLayout 
  title="Home" 
  description="Personal website featuring blog posts, quick updates, and projects"
>
  <main>
    <section class="hero">
      <div class="container">
        <h1>Hi, I'm <span class="name">Your Name</span></h1>
        <p class="tagline">
          Software Engineer building modern web applications.
          <br />
          I write about development, technology, and ideas.
        </p>
        <div class="cta-buttons">
          <a href="/blog" class="button primary">Read Blog</a>
          <a href="/projects" class="button">View Projects</a>
        </div>
      </div>
    </section>

    {recentBlogPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-header">
            <h2>Recent Blog Posts</h2>
            <a href="/blog" class="view-all">View all →</a>
          </div>
          <div class="blog-grid">
            {recentBlogPosts.map(post => (
              <article class="blog-card">
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </time>
                <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
                <p>{post.data.description}</p>
                {post.data.tags.length > 0 && (
                  <div class="tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    {featuredProjects.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-header">
            <h2>Featured Projects</h2>
            <a href="/projects" class="view-all">View all →</a>
          </div>
          <div class="projects-grid">
            {featuredProjects.map(project => (
              <article class="project-card">
                <h3><a href={`/projects/${project.slug}`}>{project.data.title}</a></h3>
                <p>{project.data.description}</p>
                {project.data.tags.length > 0 && (
                  <div class="tags">
                    {project.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    {recentPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-header">
            <h2>Recent Updates</h2>
            <a href="/posts" class="view-all">View all →</a>
          </div>
          <div class="posts-list">
            {recentPosts.map(async (post) => {
              const { Content } = await post.render();
              return (
                <article class="post-item">
                  <time datetime={post.data.publishDate.toISOString()}>
                    {post.data.publishDate.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                  <div class="post-content">
                    <Content />
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      </section>
    )}
  </main>
</BaseLayout>

<style>
  .hero {
    padding: 5rem 0 4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .hero .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .name {
    color: var(--color-accent);
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s;
    display: inline-block;
  }

  .button:hover {
    background: var(--color-surface);
    text-decoration: none;
  }

  .button.primary {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .button.primary:hover {
    background: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
  }

  .section {
    padding: 4rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .section:last-child {
    border-bottom: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-size: 2rem;
  }

  .view-all {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .view-all:hover {
    color: var(--color-accent);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .blog-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.2s;
  }

  .blog-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .blog-card time {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .blog-card h3 {
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
  }

  .blog-card h3 a {
    color: var(--color-text);
  }

  .blog-card h3 a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .blog-card p {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.2s;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .project-card h3 {
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
  }

  .project-card h3 a {
    color: var(--color-text);
  }

  .project-card h3 a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .project-card p {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.875rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.25rem;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    align-items: start;
  }

  .post-item time {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .post-content {
    line-height: 1.6;
  }

  .post-content :global(p) {
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1.1rem;
    }

    .blog-grid,
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .section-header h2 {
      font-size: 1.5rem;
    }
  }
</style>
