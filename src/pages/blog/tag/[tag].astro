---
import type { GetStaticPaths } from 'astro';
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection('blog', ({ data }) => !data.draft);
  const allTags = [...new Set(blogPosts.flatMap(post => post.data.tags))];
  
  return allTags.map((tag) => {
    const filteredPosts = blogPosts
      .filter(post => post.data.tags.includes(tag))
      .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
    
    return {
      params: { tag },
      props: { posts: filteredPosts, tag },
    };
  });
}) satisfies GetStaticPaths;

const { posts, tag } = Astro.props;
const allPosts = (await getCollection('blog')).filter(post => !post.data.draft);
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout 
  title={`Blog posts tagged "${tag}"`}
  description={`Blog posts about ${tag}`}
>
  <main class="container">
    <div class="header">
      <h1>Blog: <span class="tag-highlight">{tag}</span></h1>
      <p class="subtitle">{posts.length} {posts.length === 1 ? 'post' : 'posts'} tagged with "{tag}"</p>
    </div>
    
    <div class="tags">
      <span class="tag-label">Filter by tag:</span>
      <a href="/blog" class="tag">All</a>
      {allTags.map(t => (
        <a 
          href={`/blog/tag/${t}`} 
          class:list={['tag', { active: t === tag }]}
        >
          {t}
        </a>
      ))}
    </div>

    <div class="posts">
      {posts.map(post => (
        <article>
          <time datetime={post.data.publishDate.toISOString()}>
            {post.data.publishDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          <h2><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
          <p class="description">{post.data.description}</p>
          {post.data.tags.length > 0 && (
            <div class="post-tags">
              {post.data.tags.map(t => (
                <span class="tag">{t}</span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .header {
    margin-bottom: 2rem;
  }

  h1 {
    margin-bottom: 0.5rem;
  }

  .tag-highlight {
    color: var(--color-accent);
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 2rem;
    padding: 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .tag-label {
    font-weight: 600;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .tag {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .tag:hover {
    background: var(--color-surface);
    text-decoration: none;
  }

  .tag.active {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  article {
    padding: 2rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  article:last-child {
    border-bottom: none;
  }

  time {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  h2 {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
  }

  h2 a {
    color: var(--color-text);
  }

  h2 a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .description {
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tags .tag {
    background: var(--color-surface);
  }
</style>
