---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/posts', label: 'Posts' },
  { href: '/projects', label: 'Projects' },
];

const currentPath = Astro.url.pathname;
---

<header>
  <nav>
    <div class="container">
      <a href="/" class="logo">Your Name</a>
      <ul>
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class:list={[{ active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    background: var(--color-bg);
    z-index: 100;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .logo {
    font-weight: 600;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    flex: 1;
  }

  ul a {
    text-decoration: none;
  }

  ul a:hover {
    text-decoration: none;
    color: var(--color-accent-hover);
  }

  ul a.active {
    font-weight: 600;
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .container {
      gap: 1rem;
    }

    ul {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .logo {
      font-size: 1.1rem;
    }
  }
</style>
